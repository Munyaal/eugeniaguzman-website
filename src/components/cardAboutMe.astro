---
const { image, title, subtitle, list } = Astro.props;
---

<div class="flex justify-center">
  <div class="card w-[300px] lg:w-[480px] h-[450px] lg:h-[600px] overflow-hidden relative rounded-3xl">
    <div class="place-items-center">
      <img
        src={image}
        alt={title}
        class="card-img w-full object-cover object-center h-[450px] lg:h-[600px]"
      />
      <div class="absolute inset-0 bg-navy-blue-500/40"></div>
    </div>
    <div class="intro absolute bottom-0 h-33 text-center bg-navy-blue-800 rounded-t-3xl w-full text-white px-10 place-items-center">
      <h1 class="text-3xl lg:text-5xl font-bold mt-4 mb-2 lg:mb-5">{title}</h1>
      <div class="content opacity-0">
        <h2 class="text-base md:text-lg font-semibold mb-1 lg:mb-7" set:html={subtitle}></h2>
        <ul class="list-disc list-outside text-left text-base md:text-lg mt-5 space-y-1 lg:space-y-3">
          {list.map((item:string) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</div>
<style>
  .card-img {
    transition: transform 0.4s ease-in-out;
  }

  .card:hover .card-img {
    transform: scale(1.10);
  }
    .intro {
        transition: height 0.5s ease-in-out, bottom 0.5s ease-in-out;
    }
    .card:hover{
        cursor:pointer;
    }

    .card:hover .intro{
        height: 450px;
        bottom:0%;
    }
    .card:hover .content{
        opacity: 1;
        visibility: visible;
    }
</style>
