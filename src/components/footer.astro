---
import Facebook from '../assets/svg/facebook.svg';
import Instagram from '../assets/svg/instagram.svg';
import Youtube from '../assets/svg/youtube.svg';
import Tiktok from '../assets/svg/tiktok.svg';
import Spotify from '../assets/svg/spotify.svg';
---

<footer class="bg-navy-blue-400">
    <div class="lg:flex lg:justify-between max-w-[1300px] mx-auto px-4 py-8 place-items-center">
        <div>
            <img src="/images/logo-guzman-blanco.png" alt="" class="w-40 mx-auto py-5" />
        </div>
        <div>
            <p class="text-center text-white text-sm py-2">Copyright © 2025. Luisa Eugenia Guzmán</p>
        </div>
        <div class="flex flex-col items-center">
            <p class="text-white text-xl font-bold">Redes Sociales</p>
            <div class="flex justify-center items-center space-x-4 pt-2">
            <a href="https://www.facebook.com/minucaguzman" class="pt-2" target="_blank">
                <Facebook class="w-12 h-12 inline-block  fill-white hover:fill-gray-200" />
            </a>
            <a href="https://www.instagram.com/minuca.guzman" class="pt-2" target="_blank">
                <Instagram class="w-12 h-12 inline-block  fill-white hover:fill-gray-200" />
            </a>
            <a href="https://www.instagram.com/minuca.guzman" class="pt-2" target="_blank">
                <Youtube class="w-12 h-12 inline-block  fill-white hover:fill-gray-200" />
            </a>
             <a href="https://www.instagram.com/minuca.guzman" class="pt-2" target="_blank">
                <Tiktok class="w-12 h-12 inline-block  fill-white hover:fill-gray-200" />
            </a>
            <a href="https://www.instagram.com/minuca.guzman" class="pt-2" target="_blank">
                <Spotify class="w-12 h-12 inline-block  fill-white hover:fill-gray-200" />
            </a>
            </div>
        </div>
    </div>
</footer>