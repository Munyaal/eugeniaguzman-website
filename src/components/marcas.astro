---
const images = [
  "/images/Logos_Enlaces-telecom.webp",
  "/images/logo-cui.png",
  "/images/logo-buenatierra.png",
  "/images/logo-centro-educativo.png",
  "/images/logo-ilogs.png",
  "/images/logo-leones.webp",
  "/images/Logo-meguzAdvance.png",
];
---

<section id="mis-marcas" >
  <div class="py-10 lg:py-20">
    <h1
      class="text-6xl md:text-8xl font-bold text-center lg:mb-10 font-tangerine text-navy-blue-800 mt-20"
    >
      Mis Marcas
    </h1>
    <div class="swiper brandSwiper w-[350px] lg:w-[1380px] h-[180px] lg:h-[280px] mx-auto">
      <div class="swiper-wrapper">
        <div class="swiper-slide ">
          <img src="/images/logo-ci.webp" alt="" class="w-[300px] h-[90px] md:h-[110px]" />
        </div>
        {
          images.map((image) => (
            <div class="swiper-slide place-items-center">
              <img src={image} alt="Brand Logo" class="w-[300px] h-[100px] md:h-[180px]" />
            </div>
          ))
        }
        <div class="swiper-slide flex items-center place-items-center">
          <img
            src="/images/Logo-meguzEducacion.png"
            alt=""
            class="w-[300px] h-[90px] md:h-[110px]"
          />
        </div>
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev invisible md:visible"></div>
      <div class="swiper-button-next invisible md:visible"></div>
    </div>
  </div>
</section>
<script>
  import "swiper/css";
  import "swiper/css/pagination";
  import "swiper/css/navigation";
  import Swiper from "swiper/bundle";
  import { Navigation, Pagination } from "swiper/modules";

  new Swiper(".brandSwiper", {
    modules: [Pagination, Navigation],
    slidesPerView: 1,
    loop: true,
    spaceBetween: 20,
    autoplay: {
      delay: 5000,
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
      dynamicBullets: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },

    breakpoints: {
      640: {
        slidesPerView: 1,
      },
      768: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
    },
  });
</script>
<style>
      .swiper-wrapper {
    display: flex;
    align-items: center;
    height: 100%;
  }

  .swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  .swiper-slide img {
    object-fit: contain;
    display: block;
  }
</style>
